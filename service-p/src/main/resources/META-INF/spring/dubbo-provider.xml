<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo
       http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="service-p"  />

    <!-- 使用multicast广播注册中心暴露服务地址 -->
    <dubbo:registry address="zookeeper://localhost:2181" />

    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="20880" />

    <bean id="demoApi1Imp" class="com.ouyeel.provider.servicep.service.DemoApi1Imp"/>

    <dubbo:service interface="com.ouyeel.provider.api.DemoApi1" ref="demoApi1Imp" group="service_p" version="0.5" timeout="50000"/>

    <!--注解配置-->
    <dubbo:annotation package="com.ouyeel.provider.servicep"/>

    <dubbo:provider filter="providerFilter"/>
</beans>
